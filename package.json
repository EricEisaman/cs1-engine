{
  "name": "CS1_Engine",
  "version": "0.0.03",
  "description": "Game Engine for making 3D multiplayer games in JavaScript.",
  "main": "server/server.js",
  "scripts": {
    "prebuild": "npm run config",
    "build": "rollup -c --environment SOURCEMAP:false",
    "prewatch": "npm run config",
    "watch": "rollup -c -w",
    "predev": "npm run config",
    "dev": "rollup -c --environment BUILD:dev,SOURCEMAP:true",
    "engine": "rollup -c --environment SOURCEMAP:false,ENGINE:true; npm run engineupdate",
    "enginedev": "rollup -c --environment SOURCEMAP:true,ENGINE:true ; refresh",
    "engineupdate": "rollup -c --environment SOURCEMAP:false,ENGINE:true,UPDATELATEST:true;cp ./dist/latest/cs1-engine.min.js public/; refresh",
    "start": "node server/server.js",
    "config": "if [ -f './src/core/config/client-config.json' ]; then cp ./src/core/config/client-config.json .data/; fi;"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.3",
    "rollup": "^1.27.0",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-css-only": "^1.0.0",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-terser": "^5.1.2",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-string":"^3.0.0" 
  },
  "dependencies": {
    "express": "^4.16.3",
    "socket.io": "^2.2.0",
    "uuid": "^3.3.2",
    "lowdb": "^1.x"
  },
  "engines": {
    "node": "10.x"
  },
  "repository": {
    "url": "https://glitch.com/edit/#!/cs1-engine"
  },
  "license": "MIT",
  "keywords": [
    "node",
    "glitch",
    "express",
    "cs1 engine"
  ]
}
 